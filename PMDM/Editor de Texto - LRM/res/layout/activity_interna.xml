<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azulado"
    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/editEditor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/editFichero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editEditor"
        android:layout_below="@+id/editEditor"
        android:layout_marginTop="178dp"
        android:ems="10"
        android:hint="" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btnCargar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnGuardar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="@string/cargarTxt" />

    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editFichero"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="@string/guardarTxt" />

</RelativeLayout>